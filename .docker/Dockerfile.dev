FROM rust:1.75-slim-bookworm as base

# Common base layer
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    build-essential \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Development layer
FROM base as dev
RUN apt-get update && apt-get install -y \
    python3-pip \
    python3-venv \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && python3 -m venv /usr/local/aider-venv \
    && /usr/local/aider-venv/bin/pip install aider-chat

# Create non-root user
ARG USERNAME=vscode
ARG USER_UID=1000
ARG USER_GID=$USER_UID

ENV CARGO_HOME=/usr/local/cargo \
    RUSTUP_HOME=/usr/local/rustup \
    PATH=/usr/local/cargo/bin:$PATH

RUN groupadd --gid $USER_GID $USERNAME \
    && useradd --uid $USER_UID --gid $USER_GID -m $USERNAME \
    && mkdir -p /usr/local/cargo /workspace \
    && chown -R $USERNAME:$USERNAME /usr/local/cargo /workspace \
    && chmod -R g+w /usr/local/cargo

USER $USERNAME
WORKDIR /workspace

# Pre-build dependencies
COPY --chown=$USERNAME:$USERNAME Cargo.* ./
RUN mkdir src && \
    echo "fn main() {}" > src/main.rs && \
    cargo build && \
    rm -rf src target

# Install development tools
RUN cargo install cargo-watch cargo-edit cargo-audit
